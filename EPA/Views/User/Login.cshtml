@model EPA.Models.LoginModel
<!DOCTYPE html>
<html>
    <head>
    </head>
    <body>
        <br />
        <br />
        <h2>Login to account</h2>

        <form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Login">Enter Login</label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Password">Enter password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn" />
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>
